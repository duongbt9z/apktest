<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Models.ShowSanPham">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Thông Tin Chi Tiết"
            android:textColor="#E91E63"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvShowName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="tên sản phẩm:"
            android:textColor="#492FE7"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvShowMa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" mã sản phẩm:"
            android:textColor="#8B4202"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvShowGiaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" giá  sản phẩm:"
            android:textColor="#00FFFF"
            android:textSize="15sp"/>

<!--        <ImageView-->
<!--            android:id="@+id/imgShowLogoSP"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="150dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:src="@drawable/pepsi" />-->

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2679DF"
            android:text="Exit"
            android:textColorHint="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>